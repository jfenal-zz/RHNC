#
# Main
#

$rhnc = RHNC::Session->new();

my %func = (
    c           => \&create,
    create      => \&create,
    l           => \&list,
    list        => \&list,
    destroy     => \&destroy,
    h           => \&_usage,
    help        => \&_usage,
    get_details => \&get,
    gd          => \&get,
    get         => \&get,
    set         => \&set,
    add         => \&add,
    remove      => \&remove,
);

my @args = @ARGV;
my $cmd  = shift @args;
my $rc   = 249;
if ( defined $cmd && defined $func{$cmd} ) {
    $rhnc = RHNC::Session->new();
    $rc   = $func{$cmd}->(@args);
    exit $rc;
}

pod2usage(
    -exitval => 254,
    verbose  => 99,
    -message => "No or unknown command given"
);

