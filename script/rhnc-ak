#!/usr/bin/perl
use strict;
use warnings;
use lib qw( . .. lib ../lib );
use RHNC;
use RHNC::Session;
use Carp;
use Getopt::Long qw(GetOptionsFromArray);
use Pod::Usage;

use vars qw( $rhnc %entitlement );

my %entitlement = (
    m             => 'monitoring_entitled',
    monitoring    => 'monitoring_entitled',
    p             => 'provisioning_entitled',
    provisioning  => 'provisioning_entitled',
    vp            => 'virtualization_host_platform',
    virt_platform => 'virtualization_host_platform',
    v             => 'virtualization_host',
    virt          => 'virtualization_host',
);

=head1 NAME

rhnc-ak - Operate on Satellite managed activation keys

=head1 USAGE

  rhnc-ak command [options or parameters]

=head1 REQUIRED ARGUMENTS

At least command is required for this script to operate. No shell is
currently offered, although this may come in the future.

=head1 DESCRIPTION

The following commands are available:

=cut

sub _usage {
    pod2usage( -verbose => 2 );
}

=head2 create

Create an activation key.

  rhnc-ak create [ key_name ] \
    -e provisioning,monitoring,virt,virt_platform \
     -d description,
    | -v ]                  \ # verbose
    [ -b base_channel ]     \ # label
    [ -l usage_limit ]      \
    [ -u ]                  \ # universal default
    [ -p packages ],        \ # comma separated list
    [ -c child_channels ],  \ # comma separated list
    [ -g system_groups ],   \ # comma separated list
    activationkey_name

=cut

sub create {
    my @args = @_;

    my (
        $entitlements, $name,              $base_channel, $usage_limit,
        $description,  $universal_default, $groups,       $child_channels,
        $packages,     $verbose
    );

    my $result = GetOptionsFromArray(
        \@args,

        #        'n|name=s' => \$name,
        'e|entitlement|entitlements=s' => \$entitlements,
        'd|description=s'              => \$description,
        'b|base_channel=s'             => \$base_channel,
        'l|usage_limit=i'              => \$usage_limit,
        'u|universal_default'          => \$universal_default,
        'g|groups=s'                   => \$groups,
        'c|child_channels=s'           => \$child_channels,
        'p|packages=s'                 => \$packages,
        'v|verbose+'                   => \$verbose,
      )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/create'],
      );

    my @e = ();
    if ( defined $entitlements ) {
        @e = map { $entitlement{$_} } split( m{ [,] }imxs, $entitlements );
    }

    $name = shift @args;

    if ( defined $base_channel ) {
        $base_channel = ( split( m/ [,] /imxs, $base_channel ) )[0];
    }
    else {
        $base_channel = q();
    }
    my $ak = RHNC::ActivationKey->create(
        rhnc => $rhnc,
        ( defined $name ? ( key => $name ) : () ),
        description        => $description,
        base_channel_label => $base_channel,
        usage_limit        => $usage_limit,
        (
            defined $universal_default
            ? ( universal_default => $universal_default )
            : ()
        ),

        entitlements => \@e,
    );
    croak "Key not created" if !defined $ak;

    # get it again, as modifying some parameters may have side
    # effects, such as virtualization_host will subscribe to
    # certain channels or add packages, same for provisioning_entitled
    $ak = RHNC::ActivationKey->get( $rhnc, $ak->name );

    $ak->child_channels( add => [ split /,/, $child_channels ] )
      if defined $child_channels;
    $ak->packages( add => [ split /,/, $packages ] ) if defined $packages;
    $ak->system_groups( add => [ split /,/, $groups ] ) if defined $groups;

    # RHNC::ActivationKey->create croaks if create did not work
    if ($verbose) {
        print "Created activation key : " . $ak->name() . "\n";
        if ( $verbose > 1 ) {
            print $ak->as_string;
        }
    }

    return 0;
}

=head2 destroy

Destroy an activation key.

  rhnc-ak destroy my-activation-key  
  rhnc-ak destroy 1-94704eb5c552ccc1b4fce752fd047c62

=cut

sub destroy {
    my @args = @_;
    my $rc;
    my $verbose;
    my $result = GetOptionsFromArray( \@args, 'verbose|v+' => \$verbose, )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/destroy'],
      );

    foreach my $kname (@args) {
        my $ak = RHNC::ActivationKey->get( $rhnc, $kname );
        if ( defined $ak ) {
            $rc = $ak->destroy( $rhnc, $kname );
            if ($verbose) {
                print "Destroyed activation key $kname\n";
            }
        }
    }
    return $rc ? 0 : 1;
}

=head2 list

List activation keys.

  rhnc-ak list
  rhnc-ak l
  rhnc-ak list -v  : be verbose
  rhnc-ak list -r  : list reactivation keys (sort of, may work or not,
                     based on activation key name in English and French)

=cut

sub list {
    my @args = @_;
    my ( $verbose, $reactivationkey );

    my $result = GetOptionsFromArray(
        \@args,
        'verbose|v+'         => \$verbose,
        'reactivationkeys|r' => \$reactivationkey,
      )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/list'],
      );

    my @akl = @{ RHNC::ActivationKey->list($rhnc) };

    my $nr = 0;
  AK:
    foreach my $ak (@akl) {
        my $desc = $ak->description();
        my $isre = 0;

        $isre = 1
          if ( $desc =~ /Kickstart re-activation|-activation du kickstart/ );
        next AK if $isre && !$reactivationkey;
        printf( "%-34s : %s\n", $ak->name(), $ak->description() );
    }
    print "\n" . scalar(@akl) . " activation or reactivation keys\n";

    return 0;
}

=head2 get

Get information about activation key

  rhnc-ak get activationkey-name
  rhnc-ak get id
  rhnc-ak get_details activationkey-name
  rhnc-ak get_details id
  rhnc-ak gd activationkey-name
  rhnc-ak gd id

=cut

sub get {
    my @args = @_;
    my ($verbose);

    my $result = GetOptionsFromArray( \@args, 'verbose|v+' => \$verbose, )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/get'],
      );

    foreach my $k (@args) {
        my $ak = RHNC::ActivationKey->get( $rhnc, $k );
        print $ak->as_string;
    }
    return 0;
}

=head2 set

Set/modify details of an activation key.

  rhnc-ak set               \
    | -v ]                  \ # verbose
    [ -n newname ]          \ # rename
    [ -d description ]      \ 
    [ -b base_channel ]     \ # label
    [ -l usage_limit ]      \
    [ -u ]                  \ # universal default
    [ -e provisioning,monitoring,virt,virt_platform ] \
    [ -p packages ],        \ # comma separated list
    [ -c child_channels ],  \ # comma separated list
    [ -g system_groups ],   \ # comma separated list
    activationkey_name [ activationkey_name ... ]

Or any one of those options.

=cut

sub set {
    my @args = @_;
    my $rc;
    my (
        $entitlements, $newname,           $base_channel, $usage_limit,
        $description,  $universal_default, $groups,       $child_channels,
        $packages,     $verbose
    );

    my $result = GetOptionsFromArray(
        \@args,
        'n|name=s'            => \$newname,
        'e|entitlements:s'    => \$entitlements,
        'd|description=s'     => \$description,
        'b|base_channel=s'    => \$base_channel,
        'l|usage_limit:i'     => \$usage_limit,
        'u|universal_default' => \$universal_default,
        'g|groups=s'          => \$groups,
        'c|child_channels=s'  => \$child_channels,
        'p|packages=s'        => \$packages,
        'v|verbose+'          => \$verbose,
      )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/set'],
      );
    if ( defined $base_channel ) {

        # to allow specification of -b , to empty it
        $base_channel = ( split( m/ [,] /imxs, $base_channel ) )[0];
    }

    $rc = 0;
    foreach my $kname (@args) {
        my $ak = RHNC::ActivationKey->get( $rhnc, $kname );

        $rc += $ak->name($newname)            ? 0 : 1 if defined $newname;
        $rc += $ak->description($description) ? 0 : 1 if defined $description;
        $rc += $ak->base_channel($base_channel) ? 0 : 1
          if defined $base_channel;
        $rc += $ak->usage_limit($usage_limit) ? 0 : 1 if defined $usage_limit;
        $rc += $ak->universal_default($universal_default) ? 0 : 1
          if defined $universal_default;
        $rc +=
          $ak->entitlements(
            [ map { $entitlement{$_} } split( m/ [,] /imxs, $entitlements ) ] )
          ? 0
          : 1
          if defined $entitlements;
        $rc +=
          $ak->child_channels( set => [ split /,/, $child_channels ] ) ? 0 : 1
          if defined $child_channels;
        $rc += $ak->packages( set => [ split /,/, $packages ] ) ? 0 : 1
          if defined $packages;
        $rc += $ak->system_groups( set => [ split /,/, $groups ] ) ? 0 : 1
          if defined $groups;

        # get it again, as modifying some parameters may have side
        # effects, such as virtualization_host will subscribe to
        # certain channels or add packages, same for provisioning_entitled
        $ak = RHNC::ActivationKey->get( $rhnc, $ak->name );
        if ($verbose) {
            if ( $verbose > 1 ) {
                print $ak->as_string;
            }
        }

    }
    return $rc;
}

=head2 add

Add incremental details of an activation key.

  rhnc-ak add               \
    | -v ]                  \ # verbose
    [ -p packages ],        \ # comma separated list
    [ -c child_channels ],  \ # comma separated list
    [ -g system_groups ],   \ # comma separated list
    activationkey_name [ activationkey_name ... ]

Or any one of those options.

=cut

sub add {
    my @args = @_;
    my $rc;
    my ( $groups, $child_channels, $packages, $verbose );

    my $result = GetOptionsFromArray(
        \@args,
        'g|groups=s'         => \$groups,
        'c|child_channels=s' => \$child_channels,
        'p|packages=s'       => \$packages,
        'v|verbose+'         => \$verbose,
      )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/add'],
      );

    $rc = 0;
    foreach my $kname (@args) {
        my $ak = RHNC::ActivationKey->get( $rhnc, $kname );

        $rc +=
          $ak->child_channels( add => [ split /,/, $child_channels ] ) ? 0 : 1
          if defined $child_channels;
        $rc += $ak->packages( add => [ split /,/, $packages ] ) ? 0 : 1
          if defined $packages;
        $rc += $ak->system_groups( add => [ split /,/, $groups ] ) ? 0 : 1
          if defined $groups;

        # get it again, as modifying some parameters may have side
        # effects, such as virtualization_host will subscribe to
        # certain channels or add packages, same for provisioning_entitled
        $ak = RHNC::ActivationKey->get( $rhnc, $ak->name );
        if ($verbose) {
            if ( $verbose > 1 ) {
                print $ak->as_string;
            }
        }

    }
    return $rc;
}

=head2 remove

Remove incremental details of an activation key.

  rhnc-ak remove            \
    | -v ]                  \ # verbose
    [ -p packages ],        \ # comma separated list
    [ -c child_channels ],  \ # comma separated list
    [ -g system_groups ],   \ # comma separated list
    activationkey_name [ activationkey_name ... ]

Or any one of those options.

=cut

sub remove {
    my @args = @_;
    my $rc;
    my ( $groups, $child_channels, $packages, $verbose );

    my $result = GetOptionsFromArray(
        \@args,
        'g|groups=s'         => \$groups,
        'c|child_channels=s' => \$child_channels,
        'p|packages=s'       => \$packages,
        'v|verbose+'         => \$verbose,
      )
      or pod2usage(
        -exitval  => 254,
        -verbose  => 99,
        -sections => ['DESCRIPTION/remove'],
      );

    $rc = 0;
    foreach my $kname (@args) {
        my $ak = RHNC::ActivationKey->get( $rhnc, $kname );

        $rc +=
          $ak->child_channels( remove => [ split /,/, $child_channels ] )
          ? 0
          : 1
          if defined $child_channels;
        $rc += $ak->packages( remove => [ split /,/, $packages ] ) ? 0 : 1
          if defined $packages;
        $rc += $ak->system_groups( remove => [ split /,/, $groups ] ) ? 0 : 1
          if defined $groups;

        # get it again, as modifying some parameters may have side
        # effects, such as virtualization_host will subscribe to
        # certain channels or add packages, same for provisioning_entitled
        $ak = RHNC::ActivationKey->get( $rhnc, $ak->name );
        if ($verbose) {
            if ( $verbose > 1 ) {
                print $ak->as_string;
            }
        }

    }
    return $rc;
}

